
@{
    ViewData["Title"] = "Add Movie Rating";
}

<h1>Add Movie Rating</h1>

<form method="post">
    <select name="movieName">
        @foreach (var movie in ViewBag.Movies)
        {
            <option>@movie</option>
        }
    </select>
    <select name="rating">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
    </select>
    <button type="submit">Rate it!</button>

</form>


