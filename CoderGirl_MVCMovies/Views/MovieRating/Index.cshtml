
@{
    ViewData["Title"] = "Index";
}
<!-- This view should list a table of all saved movie names with associated average rating
  Be sure to include headers for Movie and Rating
  Each tr with a movie rating should have an id attribute equal to the id of the movie rating
    -->

<h1>Movies</h1>
<a asp-controller="MovieRating" asp-action="Create">Add New Movie</a>
<table>
    <tr>
        <th>Movie</th>
        <th>Rating</th>
    </tr>
    @foreach (var movieRating in ViewBag.MovieRatings)
    {
        <tr>
            <td>@movieRating.Key</td>
            <td>@movieRating.Value</td>
        </tr>
    }
</table>

